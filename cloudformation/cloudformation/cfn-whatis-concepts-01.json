{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "A sample template",
  "Resources": {
      "MyEC2Instance": {
          "Type": "AWS::EC2::Instance",
          "Properties": {
              "ImageId": "ami-0ff8a91507f77f867",
              "InstanceType": "t2.micro",
              "KeyName": "testkey",
              "BlockDeviceMappings": [
                  {
                      "DeviceName": "/dev/sdm",
                      "Ebs": {
                          "VolumeType": "io1",
                          "Iops": "200",
                          "DeleteOnTermination": "false",
                          "VolumeSize": "20"
                      }
                  }
              ]
          }
      },
      "MyEIP": {
          "Type": "AWS::EC2::EIP",
          "Properties": {
              "InstanceId": {
                  "Ref": "MyEC2Instance"
              }
          }
      }
  }
}